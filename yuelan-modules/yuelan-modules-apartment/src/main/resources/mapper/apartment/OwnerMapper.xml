<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yuelan.apartment.mapper.OwnerMapper">

    <resultMap id="BaseResultMap" type="com.yuelan.apartment.domain.OwnerInfo" >
        <result column="id" property="id" />
        <result column="username" property="username" />
        <result column="phone" property="phone" />
        <result column="password" property="password" />
        <result column="nickname" property="nickname" />
        <result column="card_id" property="card_id" />
        <result column="avatar" property="avatar" />
        <result column="type" property="type" />
        <result column="state" property="state" />
        <result column="create_time" property="create_time" />
    </resultMap>

    <sql id="Base_Column_List">
                id,
                username,
                phone,
                password,
                nickname,
                card_id,
                avatar,
                type,
                state,
                create_time
    </sql>

    <insert id="insert" useGeneratedKeys="true" keyColumn="id" keyProperty="id" parameterType="com.yuelan.apartment.domain.OwnerInfo">
        INSERT INTO apa_owner_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="null != id ">
                id,
            </if>
            <if test="null != username and '' != username">
                username,
            </if>
            <if test="null != phone and '' != phone">
                phone,
            </if>
            <if test="null != password and '' != password">
                password,
            </if>
            <if test="null != nickname and '' != nickname">
                nickname,
            </if>
            <if test="null != card_id and '' != card_id">
                card_id,
            </if>
            <if test="null != avatar and '' != avatar">
                avatar,
            </if>
            <if test="null != type ">
                type,
            </if>
            <if test="null != state ">
                state,
            </if>
            <if test="null != create_time ">
                create_time
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="null != id ">
                #{id},
            </if>
            <if test="null != username and '' != username">
                #{username},
            </if>
            <if test="null != phone and '' != phone">
                #{phone},
            </if>
            <if test="null != password and '' != password">
                #{password},
            </if>
            <if test="null != nickname and '' != nickname">
                #{nickname},
            </if>
            <if test="null != card_id and '' != card_id">
                #{card_id},
            </if>
            <if test="null != avatar and '' != avatar">
                #{avatar},
            </if>
            <if test="null != type ">
                #{type},
            </if>
            <if test="null != state ">
                #{state},
            </if>
            <if test="null != create_time ">
                #{create_time}
            </if>
        </trim>
    </insert>

    <delete id="delete" >
        DELETE FROM apa_owner_info
        WHERE id = #{id}
    </delete>

    <update id="update" parameterType="com.yuelan.apartment.domain.OwnerInfo">
        UPDATE apa_owner_info
        <set>
            <if test="null != id ">id = #{id},</if>
            <if test="null != username and '' != username">username = #{username},</if>
            <if test="null != phone and '' != phone">phone = #{phone},</if>
            <if test="null != password and '' != password">password = #{password},</if>
            <if test="null != nickname and '' != nickname">nickname = #{nickname},</if>
            <if test="null != card_id and '' != card_id">card_id = #{card_id},</if>
            <if test="null != avatar and '' != avatar">avatar = #{avatar},</if>
            <if test="null != type ">type = #{type},</if>
            <if test="null != state ">state = #{state},</if>
            <if test="null != create_time ">create_time = #{create_time}</if>
        </set>
        WHERE id = #{id}
    </update>


    <select id="load" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM apa_owner_info
        WHERE id = #{id}
    </select>

    <select id="pageList" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM apa_owner_info
        LIMIT #{offset}, #{pageSize}
    </select>

    <select id="pageListCount" resultType="java.lang.Integer">
        SELECT count(1)
        FROM apa_owner_info
    </select>

</mapper>