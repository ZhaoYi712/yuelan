<!--            JOIN apa_tenant_info t ON r.tenants_id = t.id-->
<!--    </select>-->

    <select id="pageList" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM apa_room_info
        LIMIT #{offset}, #{pagesize}
    </select>

    <select id="pageListCount" resultType="java.lang.Integer">
        SELECT count(1)
        FROM apa_room_info
    </select>

</mapper>